@page "/messaging"

<PageTitle>Messaging</PageTitle>

<div class="container mt-5">
    <div class="card shadow-sm p-4">
        <h1 class="text-center mb-4">Messaging Center</h1>

        <div class="row">
            <div class="col-md-4">
                <h5>Contacts</h5>
                <ul class="list-group">
                    <li class="list-group-item">Instructor</li>
                    <li class="list-group-item">Admin</li>
                    <li class="list-group-item">Students</li>
                </ul>
            </div>

            <div class="col-md-8">
                <div class="border rounded p-3 mb-3 bg-light" style="height: 300px; overflow-y: auto;">
                    <p class="text-muted text-center">No messages yet. Start a conversation below!</p>
                </div>

                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Type your message..." />
                    <button class="btn btn-primary">Send</button>
                </div>
            </div>
        </div>
    </div>
</div>

